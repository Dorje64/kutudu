<div class ="detailBox">
  <div class="titleBox">
    <label> Post</label>
    <!--<button type="button" class="close" aria-hidden="true">&times;</button>-->
  </div>

<div class="commentList ">
  <b style="height: 50px; padding:1%"><p style="font-size:190%" class="col-md-12 col-sm-12 col-xs-12">
  <b> <%= @post.title %></b>
  <%= @post.no %>
  <%= "   of   " %>
  <%= @post.course%>
