</p>

</div>
  </div>
  </hr>

<%= form_for([@post,@image],:html => {:multipart => true}) do |f| %>
   <div> <%= f.file_field :image %>
     <%=f.hidden_field :user_id ,value: current_user.id%>
     <%=f.hidden_field :post_id ,value: @post.id %>
     <%= f.submit "Upload" %></div>
<% end %>

<%@post.images.each do |image|%>
    <%=link_to "#{image.image_file_name}",images_show_path(:id => image.id)  %>
    <%#= image.image.url %>
</br>
    <%end%>



<div class="detailBox">
<div class="titleBox">
  <label>Comments</label>
  <!--<button type="button" class="close" aria-hidden="true">&times;</button>-->
</div>

<div class="actionBox">
  <ul class="commentList">

<!--show comments-->
  <% @post.comments.each do |comment| %>

    <li>
      <div class="commentText">
        <b><%= comment.username %></b>
        <p class=""><%= comment.content %> </p> <span class="date sub-text"><%= time_ago_in_words(comment.created_at) %> ago</span>

</div>
</li>

<%end%>

</ul>
<!--</div>-->
